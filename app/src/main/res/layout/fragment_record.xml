<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/textView"
                android:text="我的级别:"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"/>
        <ImageView
                android:layout_toEndOf="@id/textView"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher"
                android:layout_marginLeft="12dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        <RatingBar
                android:rating="0.5"
                android:scaleX="-1"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
            android:background="#ff969696"
            android:layout_width="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="1dp" />
    <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/textView1"
                android:text="勤奋程度:"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="35.0"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@id/textView1"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
        <ImageView
                android:src="@drawable/ic_launcher"
                android:layout_alignParentEnd="true"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="25dp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"/>
    </RelativeLayout>
    <View
            android:background="#ff969696"
            android:layout_width="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="1dp" />
    <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:text="今天学习:"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="学习了很多很多"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@id/textView2"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
        <ImageView
                android:src="@drawable/ic_launcher"
                android:layout_alignParentEnd="true"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="25dp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"/>

    </RelativeLayout>
    <View
            android:background="#ff969696"
            android:layout_width="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="1dp" />
    <RelativeLayout
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/textView3"
                android:text="累计学习:"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="6小时"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@id/textView3"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
        <ImageView
                android:src="@drawable/ic_launcher"
                android:layout_alignParentEnd="true"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="25dp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"/>

    </RelativeLayout>
    <View
            android:background="#ff969696"
            android:layout_width="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="1dp" />
    <Space android:layout_width="match_parent" android:layout_height="12dp" />
    <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:drawableStart="@drawable/ic_drawer"
                android:layout_centerVertical="true"
                android:text="英语单词"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="学习过99999个单词"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <GridLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">
        <TextView android:text="学会了"
                  android:paddingTop="4dp"
                  android:paddingBottom="4dp"
                  android:paddingRight="4dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="50"
                android:layout_height="14dp"
                android:background="@drawable/progressbar_background"
                android:progressDrawable="@drawable/over_progressbar_drawable"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:layout_marginTop="2dp"/>
        <TextView android:text="099"
                  android:layout_gravity="center_vertical"
                  android:paddingLeft="4dp"/>

        <TextView android:text="已完成"
                  android:paddingTop="4dp"
                  android:paddingBottom="4dp"
                  android:paddingRight="4dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="80"
                android:layout_height="14dp"
                android:background="@drawable/progressbar_background"
                android:progressDrawable="@drawable/finish_progressbar_drawable"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:layout_marginTop="2dp"/>
        <TextView android:text="0"
                  android:layout_gravity="center_vertical"
                  android:paddingLeft="4dp"/>

        <TextView android:text="快完成"
                  android:paddingTop="4dp"
                  android:paddingBottom="4dp"
                  android:paddingRight="4dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="30"
                android:layout_height="14dp"
                android:background="@drawable/progressbar_background"
                android:progressDrawable="@drawable/finishing_progressbar_drawable"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:layout_marginTop="2dp"/>
        <TextView android:text="0"
                  android:layout_gravity="center_vertical"
                  android:paddingLeft="4dp"/>

        <TextView android:text="学习中"
                  android:paddingTop="4dp"
                  android:paddingBottom="4dp"
                  android:paddingRight="4dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="20"
                android:layout_height="14dp"
                android:background="@drawable/progressbar_background"
                android:progressDrawable="@drawable/learning_progressbar_drawable"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:layout_marginTop="2dp"/>
        <TextView android:text="0"
                  android:layout_gravity="center_vertical"
                  android:paddingLeft="4dp"/>

        <TextView android:text="难点"
                  android:paddingTop="4dp"
                  android:paddingBottom="4dp"
                  android:paddingRight="4dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="5"
                android:layout_height="14dp"
                android:background="@drawable/progressbar_background"
                android:progressDrawable="@drawable/hard_progressbar_drawable"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:layout_marginTop="2dp"/>
        <TextView android:text="00"
                  android:layout_gravity="center_vertical"
                  android:paddingLeft="4dp"/>
    </GridLayout>
</LinearLayout>
</ScrollView>